<div class="background w-100 h-100 my-3", style="background-image:  linear-gradient(to bottom, rgba(60,60,60,0.5), rgba(10,10,10,0.9)), url('<%= @flat.image %>')">
  <div class="container mt-5 pt-5">
    <div class="">
      <h1><%= @flat.name %></h1>
      <h3><%= @flat.address %></h3>
    </div>
    <div class="">
      <h2>Details</h2>
      <span><i class="fas fa-user-friends"></i></span>
      <span><%= @flat.number_of_guests %></span>
      <span><i class="fas fa-euro-sign"></i></span>
      <span><%= @flat.price_per_night %></span>
    </div>
    <div class="">
      <h2>A bit more about this flat</h2>
      <p><%= @flat.description %></p>
    </div>
  </div>
</div>
